FROM node:20-alpine AS builder
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
ARG VITE_ONLINE_THRESHOLD_MINUTES=15
ENV VITE_ONLINE_THRESHOLD_MINUTES=$VITE_ONLINE_THRESHOLD_MINUTES
RUN npm run build

FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
